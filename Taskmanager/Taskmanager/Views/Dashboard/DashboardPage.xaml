<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskmanager.Views.Dashboard.DashboardPage"
             BackgroundColor="{StaticResource ColorWhite80}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="{StaticResource ColorWhite}" Padding="16">
                <Button Text="Adicionar Novo Registro"
                        TextColor="{StaticResource ColorWhite}"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        BackgroundColor="{StaticResource ColorPrimary}"
                        BorderColor="{StaticResource ColorPrimary}"
                        HorizontalOptions="FillAndExpand" 
                        HeightRequest="55"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>