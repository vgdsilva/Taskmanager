<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Name="input"
      x:Class="Taskmanager.Mobile.Controls.InputTextEdit"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand">
    
    <Frame Margin="0" Padding="0" CornerRadius="5">
        <Grid BackgroundColor="{StaticResource ColorWhite}"  Margin="6">
            <Label Text="Data" TextColor="{StaticResource ColorGray500}" FontSize="12" FontAttributes="Bold" Margin="0" Padding="5" TranslationY="-5"></Label>
            <Entry  Margin="0" TranslationY="5" TextColor="{StaticResource DarkGray}" FontAttributes="Bold" FontSize="16"></Entry>
        </Grid>
    </Frame>
</Grid>